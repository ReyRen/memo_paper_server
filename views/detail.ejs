<body>
<div style="margin: 15px;">
	<fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
		<legend>Memo details</legend>
	</fieldset>

	<form class="layui-form" action="/addrecord" method="POST">
		<div class="layui-form-item">
			<label class="layui-form-label">Memo entry</label>
			<div class="layui-input-block">
				<input type="text" name="memo_entry" lay-verify="title" autocomplete="off" placeholder="<%- boddy.record %>" class="layui-input" readonly>
			</div>
		</div>

		<div class="layui-form-item">
			<div class="layui-inline">
				<label class="layui-form-label">Dead Line</label>
				<div class="layui-input-block">
					<input type="text" name="dead_line" placeholder="<%- boddy.date %>" autocomplete="off" class="layui-input" readonly>
				</div>
			</div>
		</div>

		<div class="layui-form-item">
			<label class="layui-form-label">Class</label>
			<!--should be replaced by for loop in ejs-->
			<div class="layui-input-block">
				<input type="checkbox" name="class_other" title="<%- boddy.class %>" checked="" disabled>
			</div>
		</div>

		<div class="layui-form-item">
			<div class="layui-inline">
				<label class="layui-form-label">Position</label>
				<div class="layui-input-block">
					<input type="tel" name="position" autocomplete="off" class="layui-input" placeholder="<%- boddy.position %>" readonly>
				</div>
			</div>
		</div>

		<div class="layui-form-item">
			<label class="layui-form-label">Priority</label>
			<div class="layui-input-inline">
				<select name="priority">
					<option value="normal" selected><%- boddy.priority %></option>
				</select>
			</div>
		</div>

		<div class="layui-form-item">
			<label class="layui-form-label">Top</label>
			<div class="layui-input-block">
				<input type="checkbox" name="top" title="<%- boddy.top %>" disabled>
			</div>
		</div>

		<!--
		<div class="layui-form-item layui-form-text">
			<label class="layui-form-label">普通文本域</label>
			<div class="layui-input-block">
				<textarea placeholder="请输入内容" class="layui-textarea"></textarea>
			</div>
		</div>
		-->

		<div class="layui-form-item layui-form-text">
			<label class="layui-form-label">Comments</label>
			<div class="layui-input-block">
				<input type="tel" name="comments" autocomplete="off" class="layui-input" placeholder="<%- boddy.comments %>" readonly>
			</div>
		</div>


			<div class="layui-form-item">
				<div class="layui-input-block">
					<input type="button" value="Back" onClick=(history.back()) class="layui-btn">
				</div>
			</div>
	</form>
</div>

<script type="text/javascript" src="plugins/layui/layui.js"></script>
<script>
	layui.use(['form', 'layedit', 'laydate'], function() {
		var form = layui.form(),
			layer = layui.layer,
			layedit = layui.layedit,
			laydate = layui.laydate;

		//创建一个编辑器
		var editIndex = layedit.build('LAY_demo_editor');
		//自定义验证规则
		form.verify({
			title: function(value) {
				if(value.length < 1) {
					return "The Memo Entry can't be empty!";
				}
			},
			/*
			pass: [/(.+){6,12}$/, '密码必须6到12位'],
			*/
			content: function(value) {
				layedit.sync(editIndex);
			}
		});

		//监听提交
		/*
		form.on('submit(demo1)', function(data) {
			layer.alert(JSON.stringify(data.field), {
				title: '最终的提交信息'
			})
			return true;
		});
		*/
	});
</script>
